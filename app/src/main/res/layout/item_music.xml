<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.example.calmsleep.model.MusicData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/iv_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                setImage="@{data.linkImage}"
                android:src="@drawable/naruto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layoutDirection="rtl"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="?android:background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_play_circle_white_36dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="ltr"
                    android:id="@+id/tv_songname"
                    setText="@{data.songName}"
                    android:text="Sound"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>