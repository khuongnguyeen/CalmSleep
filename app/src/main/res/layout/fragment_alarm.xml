<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:id="@+id/iv_picks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/full_100"
            android:src="@drawable/stars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/iv_ambient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/full_100"
            android:src="@drawable/star"
            app:layout_constraintStart_toEndOf="@+id/iv_picks"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/iv_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/full_100"
            android:src="@drawable/nature"
            app:layout_constraintStart_toEndOf="@+id/iv_ambient"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/iv_kid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/full_100"
            android:src="@drawable/kid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_nature"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_picks"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/experts_picks"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_picks" />

        <TextView
            android:id="@+id/iv_star"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/ambient"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_picks"
            app:layout_constraintTop_toBottomOf="@+id/iv_ambient" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/nature"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/iv_star"
            app:layout_constraintTop_toBottomOf="@+id/iv_nature" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:text="@string/kids"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/iv_kid" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>